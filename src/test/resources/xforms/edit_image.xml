            </item>
            <item>
                <label ref="jr:itext('group_list/q_multiselect_2-three-label')"/>
                <value>three</value>
            </item>
        </select>
        <select1 ref="/data/q_singleselect">
            <label ref="jr:itext('group_list/q_singleselect_2-label')"/>
