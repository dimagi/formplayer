            </item>
            <item>
                <label ref="jr:itext('q_singleselect_compact-c-label')"/>
                <value>c</value>
            </item>
            <item>
                <label ref="jr:itext('q_singleselect_compact-d-label')"/>
                <value>d</value>
            </item>
        </select1>
        <group ref="/data/list_view" appearance="field-list">
            <label ref="jr:itext('list_view-label')"/>
            <select1 ref="/data/list_view/list_label" appearance="label">
                <label ref="jr:itext('list_view/list_label-label')"/>
