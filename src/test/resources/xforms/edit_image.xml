                <label ref="jr:itext('group_list/q_multiselect_2-one-label')"/>
                <value>one</value>
            </item>
            <item>
                <label ref="jr:itext('group_list/q_multiselect_2-two-label')"/>
                <value>two</value>
            </item>
            <item>
                <label ref="jr:itext('group_list/q_multiselect_2-three-label')"/>
                <value>three</value>
            </item>
        </select1>
        <select1 ref="/data/q_singleselect_minimal" appearance="minimal">
            <label ref="jr:itext('q_singleselect_minimal-label')"/>
            <item>
                <label ref="jr:itext('list_view/Green-yes-label')"/>
                <value>yes</value>
            </item>
            <item>
                <label ref="jr:itext('list_view/Green-no-label')"/>
                <value>no</value>
            </item>
        </select1>
        <trigger ref="/data/label_mc_minimal" appearance="minimal">
            <label ref="jr:itext('label_mc_minimal-label')"/>
        </trigger>
        <select1 ref="/data/q_singleselect_compact" appearance="compact">
            <label ref="jr:itext('sexual_partners_choice-label')"/>
